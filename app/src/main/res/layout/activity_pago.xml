<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Resumen del total a pagar por la cantidad y precios de los productos, incluyendo gastos de envío"
            android:textSize="14sp"
            android:textColor="#666"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del usuario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elegir direccion"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Sección de usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo de un correo"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ejemplo de telefono"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punto de entrega"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:paddingBottom="8dp" />

        <!-- Detalles de envío -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <!-- Producto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elegir Casa"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/tvUserAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aqui supongo que elige casa y va la direccion"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Elegir Tienda"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/tvShopeAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aqui supongo que elige tienda y va la direccion"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metodo de pago"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rgMetodoPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/rbEfectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago en Efectivo" />

                    <RadioButton
                        android:id="@+id/rbTarjeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago con Tarjeta" />
                </RadioGroup>

                <!-- Sección de Pago en Efectivo -->
                <LinearLayout
                    android:id="@+id/llPagoEfectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: $0.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Sección de Pago con Tarjeta -->
                <LinearLayout
                    android:id="@+id/llPagoTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/etNumeroTarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Número de Tarjeta"
                        android:inputType="number"
                        android:maxLength="16"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background" />

                    <EditText
                        android:id="@+id/etCVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CVV"
                        android:inputType="numberPassword"
                        android:maxLength="3"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginTop="8dp" />

                    <EditText
                        android:id="@+id/etFechaVencimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fecha de Vencimiento (MM/AA)"
                        android:inputType="date"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/btnPagarTarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pagar"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Botón de Confirmar Pago en Efectivo -->
                <Button
                    android:id="@+id/btnConfirmarEfectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmar Pago en Efectivo"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF84C6"
            android:text="Confirmar Pago"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>
